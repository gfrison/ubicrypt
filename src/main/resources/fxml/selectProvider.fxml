<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="loginPane" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.72"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubicrypt.ui.ctrl.SelectProviderController">
    <top>
        <VBox fx:id="topbox" spacing="10.0">
            <children>
                <Label text="%title.selectProvider" textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Label>
                <fx:include source="header-bc.fxml"/>
                <Label text="Select Type">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <ListView fx:id="providers" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
