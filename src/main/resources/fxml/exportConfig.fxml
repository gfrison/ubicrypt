<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ubicrypt.ui.ctrl.ExportConfigCtrl">
    <top>
        <VBox fx:id="topbox" spacing="10.0">
            <children>
                <Label text="%title.addNewPK" textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Label>
                <fx:include source="header-bc.fxml"/>
                <Label text="Copy&amp;Paste the configuration to your new device">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <TextArea fx:id="text" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="cancel" cancelButton="true" mnemonicParsing="false" text="Cancel"/>
                <Button fx:id="copy" defaultButton="true" mnemonicParsing="false" text="Copy to Clipboard"
                        GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </bottom>
</BorderPane>
