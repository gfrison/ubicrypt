<?xml version="1.0" encoding="UTF-8"?>

<?import org.controlsfx.glyphfont.Glyph?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane"
            xmlns="http://javafx.com/javafx/8.0.65" fx:controller="ubicrypt.ui.ctrl.AddPKController"
            prefHeight="420.0" prefWidth="303.0">
    <top>
        <VBox fx:id="topbox" alignment="CENTER" prefHeight="24.0" prefWidth="190.0" spacing="10.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="%title.addNewPK"
                       textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <TextArea fx:id="text" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" styleClass="backnext">
            <children>
                <Button fx:id="cancel" mnemonicParsing="false" text="Back">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="BACKWARD"/>
                    </graphic>
                </Button>
                <!--<Button fx:id="next" mnemonicParsing="false" text="Next" />-->
                <Button fx:id="add" mnemonicParsing="false" text="Add">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="USER_PLUS"/>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
