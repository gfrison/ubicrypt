<?xml version="1.0" encoding="UTF-8"?>

<?import org.controlsfx.control.StatusBar?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox id="vbox" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.65"
      VBox.vgrow="ALWAYS"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubicrypt.ui.ctrl.MainController">
    <stylesheets>
        <URL value="@../main.css"/>
    </stylesheets>
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="Add Files" onAction="#addFiles"/>
                    <MenuItem text="Add Folder" onAction="#addFolder"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Exit" onAction="#exit"/>
                </items>
            </Menu>
            <Menu text="Cloud Storage">
                <items>
                    <MenuItem text="Add Local Folder" onAction="#addFileProvider"/>
                    <MenuItem text="Add Amazon S3" onAction="#addS3Provider"/>
                    <MenuItem text="Add Google Drive" onAction="#addGdriveProvider"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="About" onAction="#about"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <BorderPane VBox.vgrow="ALWAYS">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
        <center>
            <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER"
                     VBox.vgrow="ALWAYS" fx:id="tabs">
                <tabs>
                    <Tab text="Files">
                        <content>
                            <fx:include source="files.fxml" fx:id="files" VBox.vgrow="ALWAYS"/>
                        </content>
                    </Tab>
                    <Tab text="Cloud Storages">
                        <content>
                            <fx:include source="providers.fxml" fx:id="providers"
                                        VBox.vgrow="ALWAYS"/>
                        </content>
                    </Tab>
                    <Tab text="Settings">
                        <content>
                            <fx:include source="settings.fxml" VBox.vgrow="ALWAYS"/>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </center>
        <bottom>
            <HBox>
                <StatusBar fx:id="footer" HBox.hgrow="ALWAYS"/>
            </HBox>
        </bottom>
    </BorderPane>
</VBox>
