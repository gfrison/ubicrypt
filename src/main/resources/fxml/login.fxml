<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="loginPane" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ubicrypt.ui.ctrl.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <Label text="Enter Password"/>
                <PasswordField fx:id="pwd" promptText="Password"/>
                <Label fx:id="errorLabel" text="Incorrect Password" textFill="#e42611" visible="false"/>
                <Label text="Unlock the secret key">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
                <Button id="submit" fx:id="submit" defaultButton="true" mnemonicParsing="false" text="Login"/>
            </children>
        </VBox>
    </center>
    <padding>
        <Insets left="50.0" right="50.0"/>
    </padding>
</BorderPane>
